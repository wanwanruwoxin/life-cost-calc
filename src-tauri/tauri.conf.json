{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "life-cost-calc",
  "version": "0.1.0",
  "identifier": "com.life-cost-calc.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "羊羊的记账本",
        "width": 450,
        "height": 700,
        "minWidth": 350,
        "minHeight": 600,
        "maxWidth": 500,
        "center": true,
        "resizable": true,
        "maximizable": false,
        "decorations": true,
        "shadow": true,
        "theme": "Light",
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
